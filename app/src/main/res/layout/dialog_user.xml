<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="#ffffffff">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:id="@+id/image_card"
        app:cardCornerRadius="50dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/image_dialog"
            android:src="@drawable/user_thumbnail_large_03">
        </ImageView>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_dialog"
        android:layout_below="@+id/image_card"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Default"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#4A4E5C"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uId_dialog"
        android:layout_below="@id/name_dialog"
        android:drawableLeft="@drawable/profile_popup_id"
        android:drawablePadding="2dp"
        android:text="Default"
        android:textSize="12sp"
        android:textColor="#9BA2B0"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/friend_follow"
        android:visibility="gone"
        android:gravity="center"
        android:layout_below="@id/uId_dialog"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <ImageView
            android:clickable="true"
            android:id="@+id/btn_star_friend"
            android:layout_marginRight="8dp"
            android:padding="3dp"
            android:src="@drawable/profile_popup_ic_like_normal"
            android:background="#F4F5F7"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <ImageView
            android:clickable="true"
            android:padding="3dp"
            android:id="@+id/btn_home_friend"
            android:src="@drawable/profile_popup_ic_userhome_normal"
            android:background="#F4F5F7"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/hr"
        android:layout_above="@id/btn_group"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="5dp"
        android:background="#F0F0F0" />

    <LinearLayout
        android:id="@+id/btn_group"
        android:orientation = "horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:id="@+id/btn_edit"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/profile_popup_ic_profileedit"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
            <TextView
                android:text="Edit Profile"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_home"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/profile_popup_ic_home"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
            <TextView
                android:text="Home"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_keep"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/profile_popup_ic_keep"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
            <TextView
                android:text="Keep"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_chat"
            android:clickable="true"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/profile_popup_ic_chat"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
            <TextView
                android:text="Chat"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_call"
            android:visibility="gone"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/profile_popup_ic_freecall"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
            <TextView
                android:text="Free Call"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_video"
            android:visibility="gone"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/profile_popup_ic_videocall"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
            <TextView
                android:text="Video Call"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="15dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
    <!--android:gravity="center_vertical|center_horizontal"-->