<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/layout_size_56dp"
            android:layout_height="@dimen/layout_size_56dp"
            android:layout_margin="@dimen/margin_6dp"
            app:cardCornerRadius="@dimen/layout_corner_28dp">
            <ImageView
                android:id="@+id/imAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user_thumbnail_large_03" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_4dp"
                android:gravity="center"
                android:textColor="@color/colorCodGray"
                android:textSize="@dimen/text_size_18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNote"
                android:textColor="@color/colorCadetBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_4dp"
                android:gravity="center"
                android:textSize="@dimen/text_size_18dp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_header"
        android:background="@color/colorGallery" />

</RelativeLayout>