<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/spacing_8dp"
    android:paddingTop="@dimen/spacing_8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civAvatar"
        android:layout_width="@dimen/size_44dp"
        android:layout_height="@dimen/size_44dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/spacing_16dp"
        android:src="@drawable/img_user_avatar_default_3" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/spacing_16dp"
        android:layout_toEndOf="@+id/civAvatar"
        android:layout_toStartOf="@+id/frameCBChosen"
        android:gravity="start|center"
        android:text="@string/str_friends"
        android:textColor="@color/gray_cod"
        android:textSize="@dimen/text_size_16dp"
        tools:ignore="SpUsage" />

    <RelativeLayout
        android:id="@+id/frameCBChosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <CheckBox
            android:id="@+id/cbChosen"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/spacing_8dp"
            android:paddingEnd="@dimen/spacing_8dp"
            android:paddingStart="@dimen/spacing_16dp"
            android:paddingTop="@dimen/spacing_8dp"
            android:theme="@style/checkBoxStyle" />

    </RelativeLayout>

</RelativeLayout>