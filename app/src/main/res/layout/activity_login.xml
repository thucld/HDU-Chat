<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.hdu.go2jp.hduchat.activity.LoginActivity">

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/str_email_address"
        android:inputType="textEmailAddress"
        android:text="@string/str_email_test"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edEmail"
        android:layout_centerHorizontal="true"
        android:hint="@string/str_password"
        android:inputType="textPassword"
        android:text="@string/str_email_test"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvForgetPassword"
        android:layout_width="350dp"
        android:layout_height="25dp"
        android:layout_below="@id/edPassword"
        android:layout_centerHorizontal="true"
        android:text="@string/str_forget_your_password" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btnSignUp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="@string/ok"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btnSignInWithFacebook"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="#505C72"
        android:text="@string/str_no_registered_email"
        android:textAllCaps="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/btnSignInWithFacebook"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorSilverChalice" />

    <TextView
        android:id="@+id/btnSignInWithFacebook"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/str_log_in_with_facebook"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_20"
        tools:ignore="SpUsage" />

</RelativeLayout>