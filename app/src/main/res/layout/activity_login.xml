<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.hdu.go2jp.hduchat.activity.LoginActivity">

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="@dimen/size_350dp"
        android:layout_height="@dimen/layout_size_50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20dp"
        android:hint="Email Address"
        android:text="tester@gmail.com" />

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="@dimen/size_350dp"
        android:layout_height="@dimen/layout_size_50dp"
        android:layout_below="@+id/edEmail"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:text="tester@gmail.com" />

    <TextView
        android:id="@+id/tvForgetPassword"
        android:layout_width="@dimen/size_350dp"
        android:layout_height="25dp"
        android:layout_below="@id/edPassword"
        android:layout_centerHorizontal="true"
        android:text="Forget your password ?" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="@dimen/size_350dp"
        android:layout_height="@dimen/layout_size_50dp"
        android:layout_above="@+id/btnSignUp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="OK" />


    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="@dimen/size_350dp"
        android:layout_height="@dimen/layout_size_50dp"
        android:layout_above="@+id/btnSignInWithFacebook"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="#505C72"
        android:text="No registered email" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/btnSignInWithFacebook"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorSilverChalice" />

    <TextView
        android:id="@+id/btnSignInWithFacebook"
        android:layout_width="@dimen/size_350dp"
        android:layout_height="@dimen/layout_size_50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Log in with Facebook"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_18dp" />

</RelativeLayout>