<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/river_bed</item>
        <item name="colorPrimaryDark">@color/river_bed</item>
        <item name="colorAccent">@color/malachite</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="chat_text_message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/spacing_4dp</item>
        <item name="android:paddingBottom">@dimen/spacing_4dp</item>
        <item name="android:paddingLeft">@dimen/spacing_8dp</item>
        <item name="android:paddingRight">@dimen/spacing_8dp</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="chat_timings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/malachite</item>
        <item name="android:textColorSecondary">@color/ghost</item>
    </style>

</resources>
